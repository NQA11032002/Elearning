{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport Cookies from 'js-cookie';\nimport axios from 'axios';\nimport { findApiByName } from '../../../assets/js/apiUtil.js';\nimport { inject, onMounted, ref } from 'vue';\n// import App from '../../../App.vue';\n\nexport default {\n  name: 'HeaderScreen',\n  data() {\n    return {\n      isAuthenticated: false,\n      showDropdown: false,\n      role: Cookies.get(\"role\")\n    };\n  },\n  watch: {\n    isAuthenticated(newValue) {\n      // Xử lý khi giá trị của isAuthenticated thay đổi\n      if (newValue) {\n        // Người dùng đã đăng nhập\n        // Cập nhật giao diện header tại đây (ẩn/hiện nút đăng nhập, avatar, v.v.)\n      } else {\n        // Người dùng đã đăng xuất\n        // Cập nhật giao diện header tại đây (ẩn/hiện nút đăng nhập, avatar, v.v.)\n      }\n    }\n  },\n  setup() {\n    const isAuthenticated = inject('isAuthenticated', ref(false));\n\n    // ... (các phương thức và dữ liệu khác)\n\n    onMounted(() => {\n      // Kiểm tra xem có cookie 'auth' hay không để xác định isAuthenticated ban đầu\n      const token = Cookies.get('auth');\n      if (token) {\n        isAuthenticated.value = true;\n      }\n    });\n    return {\n      isAuthenticated\n    };\n  },\n  mounted() {\n    this.checkAuthentication();\n  },\n  methods: {\n    checkAuthentication() {\n      const token = Cookies.get(\"auth\"); // Thay \"auth\" bằng tên của cookie lưu token\n\n      if (token) {\n        this.isAuthenticated = true;\n      } else {\n        this.isAuthenticated = false;\n      }\n    },\n    toggleDropdown() {\n      this.showDropdown = !this.showDropdown;\n    },\n    async logout() {\n      try {\n        const apiObject = findApiByName(\"auth\", \"logout\").url;\n        const token = Cookies.get(\"auth\");\n        const formData = new FormData();\n        formData.append('token', token);\n        await axios.post(apiObject, formData, {\n          headers: {\n            'Content-Type': 'multipart/form-data'\n          }\n        }).then(res => {\n          if (res.status === 200) {\n            this.deleteCookie(\"auth\");\n            this.deleteCookie(\"userID\");\n            this.deleteCookie(\"role\");\n            this.isAuthenticated = false;\n            this.$router.push('/login');\n          }\n        });\n      } catch (error) {\n        console.error('Logout fail', error);\n      }\n    },\n    deleteCookie(name) {\n      document.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;\n    }\n  }\n};","map":{"version":3,"names":["Cookies","axios","findApiByName","inject","onMounted","ref","name","data","isAuthenticated","showDropdown","role","get","watch","newValue","setup","token","value","mounted","checkAuthentication","methods","toggleDropdown","logout","apiObject","url","formData","FormData","append","post","headers","then","res","status","deleteCookie","$router","push","error","console","document","cookie"],"sources":["C:\\Users\\hoqua\\Desktop\\Code\\PMChuyenNghiep\\Project-Elearning\\Elearning\\src\\components\\client\\common\\HeaderScreen.vue"],"sourcesContent":["<template>\n  <header\n    class=\"bg-white z-10 fixed top-0 flex items-center justify-between p-5 h-16 shadow-md shadow-gray-300 w-full left-0 right-0\">\n    <div class=\"flex items-center\">\n      <div class=\"header__logo\">\n        <img src=\"../../../assets/images/client/logo.png\" alt=\"\">\n      </div>\n      <form action=\"\" class=\"relative border rounded-md px-2 flex items-center\">\n        <input type=\"text\" placeholder=\"Tìm khóa học, chuyên gia...\" class=\"left-0 outline-none h-full py-2 text-sm w-56\">\n        <label for=\"search__submit\" class=\"absolute right-3 cursor-pointer\">\n          <i class=\"fa-solid fa-magnifying-glass text-gray-400\"></i>\n        </label>\n        <input type=\"submit\" id=\"search__submit\" hidden value=\"tìm\">\n      </form>\n    </div>\n\n    <div class=\"header__middle\">\n      <ul class=\"flex justify-between\">\n        <li><a href=\"/home\" class=\"navigate__link mr-8\">Trang chủ</a></li>\n        <li><a href=\"/training\" class=\"navigate__link mr-8\">Đào tạo</a></li>\n        <li><a href=\"/course\" class=\"navigate__link mr-8\">Khóa học</a></li>\n        <li><a href=\"/support\" class=\"navigate__link mr-8\">Hỗ trợ</a></li>\n      </ul>\n    </div>\n\n    <div class=\"\">\n      <div v-if=\"isAuthenticated\" class=\"\">\n        <div class=\"flex items-center gap-4 \">\n          <div class=\"\">\n            <a v-if=\"role === 'USER'\" href=\"/my-course\"\n              class=\"font-medium border border-blue-900 text-blue-900  py-1 px-4 rounded-md transition-all hover:bg-blue-900 hover:text-white\">Học\n              tập</a>\n            <a v-if=\"role === 'EXPERT'\" href=\"/my-course\"\n              class=\"font-medium border border-blue-900 text-blue-900  py-1 px-4 rounded-md transition-all hover:bg-blue-900 hover:text-white\">Quản\n              lý</a>\n          </div>\n          <div class=\"relative\">\n            <img @click=\"toggleDropdown\" class=\"w-8 h-8 rounded-full cursor-pointer\"\n              src=\"../../../assets/images/client/avatars/avatar.png\" alt=\"\">\n            <ul v-if=\"showDropdown\" class=\"absolute right-0 mt-2 bg-white border rounded-md shadow-md w-48 p-4\">\n              <li class=\"border-b border-gray-300 mb-2\"><a class=\"p-2\" :href=\"role === 'USER' ? '/profile' : (role === 'EXPERT' ? '/profile-expert' : '#')\">Thông tin tài khoản</a></li>\n              <li class=\"border-b border-gray-300 mb-2\"><a class=\"p-2\" href=\"/changepass\">Đổi mật khẩu</a></li>\n              <li><a class=\"p-2\" @click=\"logout\" href=\"#\">Đăng xuất</a></li>\n            </ul>\n          </div>\n        </div>\n\n      </div>\n\n      <div v-else class=\"flex items-center gap-4\">\n        <a href=\"/login\"\n          class=\"font-medium border border-blue-900 text-blue-900  py-1 px-4 rounded-md transition-all hover:bg-blue-900 hover:text-white\">Đăng\n          nhập</a>\n        <a href=\"/register\"\n          class=\"font-medium border border-blue-900 text-blue-900  py-1 px-4 rounded-md transition-all hover:bg-blue-900 hover:text-white\">Đăng\n          ký</a>\n      </div>\n    </div>\n  </header>\n</template>\n\n<script>\nimport Cookies from 'js-cookie';\nimport axios from 'axios';\nimport { findApiByName } from '../../../assets/js/apiUtil.js';\nimport { inject, onMounted, ref } from 'vue';\n// import App from '../../../App.vue';\n\nexport default {\n  name: 'HeaderScreen',\n  data() {\n    return {\n      isAuthenticated: false,\n      showDropdown: false,\n      role: Cookies.get(\"role\")\n    };\n  },\n  watch: {\n    isAuthenticated(newValue) {\n      // Xử lý khi giá trị của isAuthenticated thay đổi\n      if (newValue) {\n        // Người dùng đã đăng nhập\n        // Cập nhật giao diện header tại đây (ẩn/hiện nút đăng nhập, avatar, v.v.)\n      } else {\n        // Người dùng đã đăng xuất\n        // Cập nhật giao diện header tại đây (ẩn/hiện nút đăng nhập, avatar, v.v.)\n      }\n    },\n  },\n  setup() {\n    const isAuthenticated = inject('isAuthenticated', ref(false));\n\n    // ... (các phương thức và dữ liệu khác)\n\n    onMounted(() => {\n      // Kiểm tra xem có cookie 'auth' hay không để xác định isAuthenticated ban đầu\n      const token = Cookies.get('auth');\n      if (token) {\n        isAuthenticated.value = true;\n      }\n    });\n\n    return { isAuthenticated };\n  },\n  mounted() {\n    this.checkAuthentication();\n  },\n  methods: {\n    checkAuthentication() {\n      const token = Cookies.get(\"auth\"); // Thay \"auth\" bằng tên của cookie lưu token\n\n      if (token) {\n        this.isAuthenticated = true;\n      } else {\n        this.isAuthenticated = false;\n      }\n    },\n\n    toggleDropdown() {\n      this.showDropdown = !this.showDropdown;\n    },\n\n\n    async logout() {\n      try { \n        const apiObject = findApiByName(\"auth\", \"logout\").url;\n        const token = Cookies.get(\"auth\");\n        const formData = new FormData();\n        formData.append('token', token);\n        await axios.post(apiObject, formData, {\n          headers: {\n            'Content-Type': 'multipart/form-data',\n          },\n        }).then((res) => {\n          if(res.status === 200) {\n            this.deleteCookie(\"auth\");\n            this.deleteCookie(\"userID\");\n            this.deleteCookie(\"role\");\n            this.isAuthenticated = false;\n            this.$router.push('/login');\n          }\n        })\n      } catch (error) {\n        console.error('Logout fail', error);\n      }\n    },\n\n    deleteCookie(name) {\n      document.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;\n    },\n  },\n\n\n}\n</script>\n"],"mappings":";AA8DA,OAAOA,OAAM,MAAO,WAAW;AAC/B,OAAOC,KAAI,MAAO,OAAO;AACzB,SAASC,aAAY,QAAS,+BAA+B;AAC7D,SAASC,MAAM,EAAEC,SAAS,EAAEC,GAAE,QAAS,KAAK;AAC5C;;AAEA,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,eAAe,EAAE,KAAK;MACtBC,YAAY,EAAE,KAAK;MACnBC,IAAI,EAAEV,OAAO,CAACW,GAAG,CAAC,MAAM;IAC1B,CAAC;EACH,CAAC;EACDC,KAAK,EAAE;IACLJ,eAAeA,CAACK,QAAQ,EAAE;MACxB;MACA,IAAIA,QAAQ,EAAE;QACZ;QACA;MAAA,CACF,MAAO;QACL;QACA;MAAA;IAEJ;EACF,CAAC;EACDC,KAAKA,CAAA,EAAG;IACN,MAAMN,eAAc,GAAIL,MAAM,CAAC,iBAAiB,EAAEE,GAAG,CAAC,KAAK,CAAC,CAAC;;IAE7D;;IAEAD,SAAS,CAAC,MAAM;MACd;MACA,MAAMW,KAAI,GAAIf,OAAO,CAACW,GAAG,CAAC,MAAM,CAAC;MACjC,IAAII,KAAK,EAAE;QACTP,eAAe,CAACQ,KAAI,GAAI,IAAI;MAC9B;IACF,CAAC,CAAC;IAEF,OAAO;MAAER;IAAgB,CAAC;EAC5B,CAAC;EACDS,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,mBAAmB,CAAC,CAAC;EAC5B,CAAC;EACDC,OAAO,EAAE;IACPD,mBAAmBA,CAAA,EAAG;MACpB,MAAMH,KAAI,GAAIf,OAAO,CAACW,GAAG,CAAC,MAAM,CAAC,EAAE;;MAEnC,IAAII,KAAK,EAAE;QACT,IAAI,CAACP,eAAc,GAAI,IAAI;MAC7B,OAAO;QACL,IAAI,CAACA,eAAc,GAAI,KAAK;MAC9B;IACF,CAAC;IAEDY,cAAcA,CAAA,EAAG;MACf,IAAI,CAACX,YAAW,GAAI,CAAC,IAAI,CAACA,YAAY;IACxC,CAAC;IAGD,MAAMY,MAAMA,CAAA,EAAG;MACb,IAAI;QACF,MAAMC,SAAQ,GAAIpB,aAAa,CAAC,MAAM,EAAE